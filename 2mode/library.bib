journal = {Ssrn},
keywords = {attachment theory,embodiment,grounded cognition,social support},
number = {May},
pages = {1--18},
title = {{Toward a Radically Embodied Neuroscience of Attachment and Relationships?}},
volume = {9},
year = {2014}
}
