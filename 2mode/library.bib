journal = {Frontiers in Human Neuroscience},
keywords = {Attachment styles,Relational context,Relationship character,Relationship histories,Relationship stages,Relationship types},
number = {MAR},
pages = {1--14},
title = {{Understanding and accounting for relational context is critical for social neuroscience}},
volume = {8},
